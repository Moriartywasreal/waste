                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/scrollView"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:typeface="serif"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp" />
            <TextView
                android:layout_width="362dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="•	Hazardous waste"
                android:id="@+id/textView1115"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/scrollView"
                android:layout_marginTop="10dp"
                android:textSize="25dp"
                android:typeface="serif"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="362dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="These waste which are toxic, igneous, persistent and inflammable in nature. Mostly they generated from Industries and Medical centers. This waste are persistent nature."
                android:id="@+id/textView1116"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/scrollView"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:typeface="serif"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp" />
            <TextView
                android:layout_width="362dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="•	E-waste"
                android:id="@+id/textView1117"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/scrollView"
                android:layout_marginTop="10dp"
                android:textSize="25dp"
                android:typeface="serif"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="362dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="The waste which are generated from electronic manufacturing or user’s centre"
                android:id="@+id/textView1118"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/scrollView"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:typeface="serif"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp" />





            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="300dp"
                android:id="@+id/imageView32"
                android:layout_below="@+id/textView2"
                android:layout_alignParentStart="true"
                android:src="@drawable/waste2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitCenter" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="HOME"
                android:id="@+id/button41"
                android:layout_alignParentTop="false"
                android:layout_centerHorizontal="true"
                android:background="@color/highlighted_text_material_light"
                android:textColor="#083ed3"
                android:textStyle="bold"
                android:textSize="25dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:textAlignment="center" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="ENVIS CENTRE,DESKU"
                android:id="@+id/textView4"
                android:textAlignment="center" />


        </LinearLayout>
    </ScrollView>


</RelativeLayout>